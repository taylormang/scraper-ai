{
  "name": "@scraper/root",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/mcp-server",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:all": "concurrently -n api,web,db -c blue,magenta,green \"npm run dev:api\" \"npm run dev:web\" \"npx drizzle-kit studio --config=./apps/api/drizzle.config.ts\"",
    "db:studio": "npx drizzle-kit studio --config=./apps/api/drizzle.config.ts",
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.44.6",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
