# Server Configuration
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Database (PostgreSQL with Drizzle ORM)
# Local development (Docker Compose)
DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/scraper_dev
# VPS deployment
# DATABASE_URL=postgresql://postgres:securepass@your-vps-ip:5432/scraper_prod
# Managed production (Supabase)
# DATABASE_URL=postgresql://postgres:[PASSWORD]@[PROJECT].supabase.co:5432/postgres

# Redis (for BullMQ job queue)
# Local development (Docker Compose)
REDIS_URL=redis://localhost:6379
# VPS deployment
# REDIS_URL=redis://your-vps-ip:6379
# Managed production (Upstash)
# REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# External Services (for future use)
FIRECRAWL_API_KEY=
OPENAI_API_KEY=
